---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { generateGradient } from '../utils/gradient';

const posts = (await getCollection('blog'))
    // Include drafts in dev mode, exclude in production
    .filter((p) => import.meta.env.DEV || !p.data.draft)
    .sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
)
    .map((post) => ({
	...post,
	gradient: post.data.heroImage ? null : generateGradient(post.data.title),
	// Add [Draft] prefix in dev mode for draft posts
	displayTitle: import.meta.env.DEV && post.data.draft 
	    ? `[Draft] ${post.data.title}`
	    : post.data.title,
    }));
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="max-w-[960px] w-full mx-auto px-4">
			<section>
				<ul class="flex flex-wrap gap-8 list-none m-0 p-0 max-md:gap-2">
					{
						posts.map((post, index) => (
							<li class={index === 0 ? "w-full mb-4 text-center max-md:mb-0" : "w-[calc(50%-1rem)] max-md:w-full max-md:text-center"}>
								<a href={`/blog/${post.id}/`} class="block no-underline transition-all duration-200 hover:[&_h4]:text-link-500 hover:[&_.date]:text-link-500">
									{post.data.heroImage ? (
										<Image 
											width={720} 
											height={360} 
											src={post.data.heroImage} 
											alt="" 
											class={index === 0 ? "mb-2 rounded-none border-2 border-black block w-full object-cover object-left-center h-auto max-h-[min(360px,50vh)] max-md:max-h-[300px]" : "mb-2 rounded-none border-2 border-black block w-full object-cover object-left-center h-auto max-h-[min(360px,50vh)] max-md:max-h-[300px]"}
										/>
									) : post.gradient && (
										<div 
											class={index === 0 ? "gradient mb-2 rounded-none border-2 border-black block w-full bg-cover h-[min(360px,50vh)] max-md:h-[250px]" : "gradient mb-2 rounded-none border-2 border-black block w-full bg-cover h-[min(360px,50vh)] max-md:h-[250px]"} 
											style={{ background: post.gradient.background }}
										></div>
									)}
									<h4 class={index === 0 ? "title m-0 text-gray-800 leading-none text-[2.369rem] max-md:text-[1.563rem]" : "title m-0 text-gray-800 leading-none"}>{post.displayTitle}</h4>
									<p class="date m-0 text-gray-600">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
