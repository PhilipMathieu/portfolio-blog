---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { generateGradient } from '../utils/gradient';

const posts = (await getCollection('blog'))
    // Include drafts in dev mode, exclude in production
    .filter((p) => import.meta.env.DEV || !p.data.draft)
    .sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
)
    .map((post) => ({
	...post,
	gradient: post.data.heroImage ? null : generateGradient(post.data.title),
	// Add [Draft] prefix in dev mode for draft posts
	displayTitle: import.meta.env.DEV && post.data.draft 
	    ? `[Draft] ${post.data.title}`
	    : post.data.title,
    }));
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img,
			ul li .gradient {
				margin-bottom: 0.5rem;
				border-radius: 0;
				border: 2px solid #000;
				display: block;
				width: 100%;
				height: 360px;
				object-fit: cover;
				object-position: left center;
			}
			ul li .gradient {
				background-size: cover;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: var(--color-gray-800);
				line-height: 1;
			}
			.date {
				margin: 0;
				color: var(--color-gray-600);
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: var(--color-blue-500);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage ? (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									) : post.gradient && (
										<div class="gradient" style={{ background: post.gradient.background }}></div>
									)}
									<h4 class="title">{post.displayTitle}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
